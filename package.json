{
  "name": "hydrolens",
  "version": "1.0.0",
  "description": "HydroLens - A groundwater data exploration platform",
  "main": "server/acc/script/server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server/acc/script/server.js",
    "python": "cd hydrolensBE && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "python-dev": "cd hydrolensBE && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "install-python": "cd hydrolensBE && pip install -r requirements.txt",
    "setup": "npm install && npm run install-python",
    "test": "node test-setup.js",
    "test-servers": "echo 'Testing servers...' && npm run python & sleep 3 && npm run dev"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.0.1"
  },
  "keywords": ["hydrolens", "groundwater", "ai", "chat"],
  "author": "",
  "license": "ISC"
}
